{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2022", "DOM"],
    "types": []
  },
  "include": [
    "index.ts",
    "core/**/*.ts",
    "model/**/*.ts",
    "view/**/*.ts",
    "controller/**/*.ts",
    "react/**/*.ts",
    "react/**/*.tsx"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
